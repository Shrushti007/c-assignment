#include<iostream>
#include<string.h>
using namespace std;
class Student
{
	private:
	string name,address;
	int rno,phno;
	public:
		void get()
		{
			name="john";
			rno=1;
			phno=9859636529;
			address="Mumbai";
			name="sam";
			rno=2;
			phno= 8456975216;
			address="Nashik";
		}
		void show()
		{
			cout<<"\nName:"<<name<<"\nRoll.No:"<<rno<<"\nPhoneNo:"<<phno<<"\nAddress:"<<address;
			
		}
};
main()
{
	Student s1,s2;
	s1.get();
	s1.show();
	s1.get();
	s1.show();
}
